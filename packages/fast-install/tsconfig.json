{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "rootDir": "src",
    "outDir": "lib",
    "incremental": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "types": ["chalk", "glob", "jest", "node", "webpack"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.references.json" }]
}
