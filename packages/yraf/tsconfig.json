{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "rootDir": "src",
    "outDir": "lib",
    "incremental": true,
    "tsBuildInfoFile": "lib/.tsbuildinfo",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "checkJs": false,
    "composite": true,
    "types": ["node"],
    "noEmit": true
  },
  "include": ["src"]
}
